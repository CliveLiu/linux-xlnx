/dts-v1/;
/include/ "zynq-7000.dtsi"

/ {
	model = "Zynq Motion Board";
	compatible = "xlnx,zynq-motion", "xlnx,zynq-7000";

	aliases {
		serial0 = &uart1;
	};

	memory {
		device_type = "memory";
		reg = <0x0 0x20000000>;
	};

	chosen {
		bootargs = "console=ttyPS0,115200 root=/dev/ram rw earlyprintk printk.time=1";
		linux,stdout-path = "/amba/serial@e0001000";
	};
};

&sdhci0 {
	status = "okay";
};

&uart1 {
	status = "okay";
};
